= render({:partial => 'shared/errors', :object => @user})
= form_for(@user) do |u|
  %fieldset
    %legend= t(:user)
    %ol
      %li
        = u.label(:name)
        = u.text_field(:name, :required => true)
      %li
        = u.label(:email_address)
        = u.email_field(:email_address, {:required => true, :placeholder => 'example@domain.com'})
      %li
        = u.label(:password)
        = u.password_field(:password)
      %li
        = u.label(:password_confirmation)
        = u.password_field(:password_confirmation)
  %fieldset
    = link_to(t(:cancel), users_path, :class => 'button')
    = u.submit(t(:save), :disable_with => t(:saving))